<h1> <%= @users.username %> </h1>

<dl>
  <dt>Private</dt>
  <dd><%= @users.private %><dd>

  <dt>Followers</dt>
  <dd><%= @users.accepted_received_follow_requests.count %><dd>

  <dt>Following</dt>
  <dd><%= @users.accepted_sent_follow_requests.count %><dd>
</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @users.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @users.username %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @users.username %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @users.username %>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Feed (<%= @users.feed.count%>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th>
    </th>
  </tr>

  <% @users.feed.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.image %>">
    </td>

    <td>
      <%= photo.poster.username %>
    </td>

    <td>
      <%= photo.caption %>
    </td>

    <td>
      <%= photo.created_at %>
    </td>

    <td>
      <%= photo.likes.count %>
    </td>

    <td>
      <a href="/photos/<%= photo.id %>">Show details</a>
    </td>
  </tr>

  <% end %>
